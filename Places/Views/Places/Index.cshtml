  
@{
  Layout = "_Layout";
}

@using Places.Models;
@model List<Places.Models.Place>;

<h1>Places</h1>

@if (@Model.Count == 0)
{
  <h3>No places have been added yet!</h3>
} 

@foreach (Place place in Model)
{
  <li>@Html.ActionLink($"{place.Continent}", "Details", new { id = place.PlaceId })</li>
}

<p>@Html.ActionLink("Add new place", "Create")</p>